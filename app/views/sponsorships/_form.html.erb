<script type="text/javascript">
  function onlyNos(e, t) {
            try {
                if (window.event) {
                    var charCode = window.event.keyCode;
                }
                else if (e) {
                    var charCode = e.which;
                }
                else { return true; }
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    return false;
                }
                return true;
            }
            catch (err) {
                alert(err.Description);
            }
        }
</script>
<%= form_for(@sponsorship, html: {class: "custom-form"}) do |f| %>
  <% if @sponsorship.errors.any? %>
    <div class="col s12 m12 l12 center">
      <div class="col hide-on-small-and-down m1 l1 center">&nbsp;</div>
        <div class="col s12 m10 l10">
          <div id="error_explanation">
            <ul>
            <% @sponsorship.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div><br><br>
        </div>
      <div class="col hide-on-small-and-down m1 l1 center">&nbsp;</div>
    </div>
  <% end %>
<div class="form-horizontal">
  <div class="form-group">
    <%= f.label :name, :class=>"control-label col m3 l3" %>
    <%= f.text_field :name,:class=>"form-control col m6 l6"  %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class=>"control-label col m3 l3" %>
    <%= f.text_field :email,:class=>"form-control col m6 l6" %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class=>"control-label col m3 l3" %>
    <%= f.text_field :phone,:class=>"form-control col m6 l6",:onkeypress=>"return onlyNos(event,this);",:maxlength=>"10" %>
  </div>
  <div class="form-group">
    <%= f.label :message, :class=>"control-label col m3 l3" %>
    <%= f.text_area :message,:class=>"form-control col m6 l6",:size =>"20x10" %>
    <span class="col m3 l3">&nbsp;</span>
  </div>
  <div class="actions center">
    <%= f.submit "Submit",:class=>"btn waves-effect waves-light"  %>
  </div>
</div>
<% end %>