<script type="text/javascript">
  $(document).ready(function(){
    $("#rejectr").hide();
    $("#entry_status").change(function () {
        var status=this.value;
        if(status=="Rejected" || status=="rejected"){
          $("#rejectr").show();
        }else{
          $("#rejectr").hide();
        }        
    });
  })
</script>
