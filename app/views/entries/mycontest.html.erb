<div class="col s12 m12 l12">
  <div class="col hide-on-small-and-down m1 l1 center">&nbsp;</div>
    <div class="col s12 m10 l10">
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
    </div>
    <div class="col hide-on-small-and-down m1 l1 center">&nbsp;</div>
</div>
<div class="col hide-on-small-and-below m1 l1">&nbsp;</div>
<div class="col s12 m10 l10">
  <div class="center">
    <div class="center">
      <%= image_tag(@user.image,:class=>"responsive-img profile-pic") %>
    </div>
  </div>
  <div class="center">
    <h5>My Entries</h5>
  </div>
  <div class="condesc">
  <table class="table-responsive bordered highlight">
    <thead>
      <tr>
        <th class="center" width="15%">Contest Details</th>
        <th class="center" width="25%">Your Submission</th>
        <th class="center" width="15%">Votes</th>
        <th class="center" width="20%">Status</th>
        <th class="center" width="25%">Rejected Reason<br>(If Any)</th>
      </tr>
    </thead>

    <tbody class="krtext">
      <% @userentries.each do |entry| %>
        <tr>
          <td class="center">
            <p>Contest Id : <%= entry.contest_id %></p>
            <%= link_to "View Contest", "/contests/#{entry.contest_id}" %>
          </td>
          <td class="center">
            <%if entry.image %>
              <%= link_to(image_tag(entry.image, :class=>"myenimg responsive-image"),entry_path(entry.id)) %>
            <%else%>
              <p>No Image</p>
            <%end%>
            <%#if entry.uploaded_video %>
              <%#= image_tag(entry.uploaded_video, :class=>"relatedimg responsive-image") %>
            <%#else%>
              <!--p>No Video</p-->
            <%#end%>
            <div class="conimage">
              <p><%= entry.caption %></p>
            </div>
          </td>        
          <td class="center">
            <%if entry.entryvotes %>
              <%= entry.entryvotes %>
            <%else%>
              <%if entry.votes %>
                <%= entry.votes.count %>
              <%else%>
                <p>No Votes yet</p>
              <%end%>
            <%end%>
            <%#if entry.shares %>
              <%#= entry.shares.to_s %>
            <%#else%>
              <!--p>No Shares yet</p-->
            <%#end%>
          </td>
          <td class="center">
            <%if entry.status %>
              <%= entry.status %></td>
            <% else %>
              <p>Not Approved</p>
            <% end %>
          <td><%= entry.rejected_reason %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="col hide-on-small-and-below m1 l1">&nbsp;</div>