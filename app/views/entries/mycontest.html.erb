<div class="col s12 m12 l12">
  <p id="notice"><%= notice %></p>
</div>
<div class="col hide-on-small-and-below m1 l1">&nbsp;</div>
<div class="col s12 m10 l10">
  <div class="center">
    <h5>My Entries</h5>
  </div>
  <div class="condesc">
  <table class="table-responsive bordered highlight">
    <thead>
      <tr>
        <th>Contest Link</th>
        <th width="15%">Your Submission</th>
        <th>Votes/Shares</th>
        <th>Status</th>
        <th>Rejected Reason(If Any)</th>
      </tr>
    </thead>

    <tbody class="krtext">
      <% @userentries.each do |entry| %>
        <tr>
          <td>
            <%= link_to "View Contest", "/contests/#{entry.contest_id}" %>
          </td>
          <td>
            <%if entry.image %>
              <%= image_tag(entry.image, :class=>"relatedimg responsive-image") %>
            <%else%>
              <p>No Image</p>
            <%end%>
            <%#if entry.uploaded_video %>
              <%#= image_tag(entry.uploaded_video, :class=>"relatedimg responsive-image") %>
            <%#else%>
              <!--p>No Video</p-->
            <%#end%>
            <div class="conimage">
              <p><%= entry.caption %></p>
            </div>
          </td>        
          <td>
            <%if entry.entryvotes %>
              <%= entry.entryvotes %>
            <%else%>
              <%if entry.votes %>
                <%= entry.votes.count %>
              <%else%>
                <p>No Votes yet</p>
              <%end%>
            <%end%>
            <%#if entry.shares %>
              <%#= entry.shares.to_s %>
            <%#else%>
              <!--p>No Shares yet</p-->
            <%#end%>
          </td>
          <td>
            <%if entry.status %>
              <%= entry.status %></td>
            <% else %>
              <p>Not Approved</p>
            <% end %>
          <td><%= entry.rejected_reason %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="col hide-on-small-and-below m1 l1">&nbsp;</div>