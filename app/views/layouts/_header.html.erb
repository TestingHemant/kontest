<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="https://code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="http://materializecss.com/templates/starter-template/js/init.js " type="text/javascript"></script>
<div class="navbar-fixed">
<nav role="navigation" class="nav font-gotham-medium">
  <ul class="site-links list-inline pull-left">
    <div class="hide-on-med-and-down">
      <%= link_to(image_tag("logo/KrazyKontest.png",:class=>"logo"),"/") %>
    </div>
    <a href="#" data-activates="mobile-view" id="button-collapse" class="black-text"><i class="material-icons">menu</i></a>
  </ul>

  <ul class="user-links list-inline pull-right black-text hide-on-med-and-down">
    <% if user_signed_in? %>
    	<li>
        Welcome <%= current_user.name %>
        <% if current_user.image? %>
          <%= image_tag(current_user.image,:class=>"responsive-img profile-pic-header") %>
        <%end%>
      </li>
      <% if current_user.admin? %>
        <li><%= link_to "Admin Panel", admin_path %></li>
      <% end %>
      <li><%= link_to "Your Entries","/myentries" %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
    <% else %>
        <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, :class=>"btn waves-effect waves-light" %></li>          
    <% end %>
  </ul>
  <ul class="side-nav" id="mobile-view">
    <% if user_signed_in? %>
      <li>
        Welcome <%= current_user.name %>
        <% if current_user.image? %>
          <%= image_tag(current_user.image,:class=>"responsive-img profile-pic-header") %>
        <%end%>
      </li>
      <% if current_user.admin? %>
        <li><%= link_to "Admin Panel", admin_path %></li>
      <% end %>
      <li><%= link_to "Your Entries","/myentries" %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
    <% else %>
        <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, :class=>"btn waves-effect waves-light" %></li>          
    <% end %>
  </ul>
</nav>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $("#button-collapse").sideNav();
    });
</script>